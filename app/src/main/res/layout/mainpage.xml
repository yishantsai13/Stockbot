<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".mainpage">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="203dp"
        android:layout_marginEnd="192dp"
        android:layout_marginRight="192dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/hihi"
        android:src="@drawable/robot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_message"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="18dp"
        android:adjustViewBounds="true"
        android:src="@drawable/message"
        app:layout_constraintLeft_toRightOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="121dp"
        android:layout_height="99dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="65dp"
        android:text="@string/welcomeText"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_message"
        app:layout_constraintTop_toTopOf="@+id/img_message"
        tools:ignore="MissingConstraints" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/buttombackground"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#5b9bd5"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/btn_stock"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/stock" />

            <ImageView

                android:id="@+id/btn_heart"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/btn_news"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/news" />

            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/menu" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>





</android.support.constraint.ConstraintLayout>